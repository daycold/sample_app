<link rel="stylesheet" href="//jqueryui.com/resources/demos/style.css">
 <script>
  function docomment(ele){
        $("#dialog-"+ele.id).dialog({
          resizable: true,
          modal: true,
height: $(window).height() * 0.9,//dialog視窗��度
  width: $(window).width() * 0.9,

          buttons :{
            Submit: function () {
              $(this).dialog("close");
            },
            Cancel: function () {
              $(this).dialog("close");
            }
          }
        });
$(window).resize(function () {
  var wWidth = $(window).width();
  var dWidth = wWidth * 0.9;
  var wHeight = $(window).height();
  var dHeight = wHeight * 0.9;
  $("#dialog-confirm").dialog("option", "width", dWidth);
  $("#dialog-confirm").dialog("option", "height", dHeight);
});
}
  </script>
  <button id="<%= micropost_id %>-<%= comment_to_id %>" onclick="docomment(this)">comment</button>

<div id="dialog-<%= micropost_id %>-<%= comment_to_id %>" title="edit your commit" style="display:none">
    <%= form_for(@miccomment) do |f| %>
      <%= f.text_field :content, class:'form-control' %>
      <%= f.hidden_field :micropost_id, id:"hidden_micropost",value: micropost_id %>
      <%= f.hidden_field :comment_to,   id:"hidden_miccomment", value: comment_to_id %>
      <%= f.hidden_field :commenter_id, value: current_user.id %>
      <%= f.submit "submit" %>
    <% end %>
</div>_

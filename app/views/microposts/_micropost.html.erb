<li>
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user?(micropost.user) %>
      <%= link_to "delete", micropost, method: :delete,
        data: { confirm: "You sure?" } %>
    <% end %>
  </span>
  <span class="like">
    <% session[:like_flag] ="T" %>
    <%= link_to micropost.like_status(current_user), micropost: micropost.id, user: current_user.id %>likers
    <%= micropost.miclikers.count %><%= render partial: 'button' ,locals: { micropost_id: micropost.id ,comment_to_id: 0}%><%= micropost.comment_count(micropost) %>
  </span>
  <% @miccomments = micropost.miccomments %>
  <% if micropost.miccomments.any? %>
    <% micropost.miccomments.each do |comment| %>
      <% if comment.comment_to == 0 || comment.comment_to.nil? %>
        <%= render comment %>
      <% end %>
    <% end %>
  <% end %>
</li>

